<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<BorderPane
        id="mainBoderPane"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="de.schmiereck.smkEasyNN.genEden.HexGridController"
>
    <top>
        <HBox
                fx:id="mainButtonBar"
                alignment="TOP_LEFT"
                spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>

            <Button text="Next" onAction="#onNextButtonClick"/>
            <Button text="Start Run" onAction="#onStartRunButtonClick"/>
            <Button text="Stop Run" onAction="#onStopRunButtonClick"/>
            <Label fx:id="counterText"/>
        </HBox>
    </top>
    <center>
        <Pane fx:id="pane" xmlns:fx="http://javafx.com/fxml">
            <!-- Hier wird das Hex-Grid hinzugefÃ¼gt -->
        </Pane>
    </center>
</BorderPane>